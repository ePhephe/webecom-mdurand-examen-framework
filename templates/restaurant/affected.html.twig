{% extends 'base.html.twig' %}

{% block title %}Wakdo - Bienvenue sur l'interface de gestion des restaurants{% endblock %}

{% block body %}
<div class="page-container container-full flex gap direction-column align-center">
    <h1>Affecter un collaborateur au {{ restaurant.nom }}</h1>
    <div class="large-12-12 flex gap">
        <a class="button secondary" href="{{ path('restaurant_edit',{ "id": restaurant.id }) }}" title="Retour au restaurant">Retour au restaurant</a>
    </div>
    <div class="large-4-12">
        {{ form_start(form) }}
        {{ form_row(form.collaborateur) }}
        {{ form_row(form.fonction) }}
        {{ form_row(form.dateDebut) }}
        {{ form_widget(form._token) }}
        {{ form_row(form.submit) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
</div>
{% endblock %}
