{% extends 'base.html.twig' %}

{% block title %}Wakdo - Bienvenue sur l'interface de gestion des restaurants{% endblock %}

{% block body %}
<div class="page-container container-full  flex gap direction-column align-center">
    <h1>Mettre Ã  jour les informations de {{ collaborateur.prenom }}</h1>
    <div class="large-12-12 flex gap">
        <a class="button secondary" href="{{ path('collaborateur_detail',{ "id": collaborateur.id }) }}" title="Retour au collaborateur">Retour au collaborateur</a>
    </div>
    <div class="large-6-12">
        {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.dateEmbauche) }}
        <div class="large-12-12 flex gap">
            <div class="large-3-12"><img class="responsive" src="{{ asset(images_affichage_directory_collaborateur ~ collaborateur.photo) }}" alt=""></div>
            <div class="large-9-12">{{ form_row(form.photo) }}</div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
