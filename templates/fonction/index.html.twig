{% extends 'base.html.twig' %}

{% block title %}Wakdo - Bienvenue sur l'interface de gestion des restaurants{% endblock %}

{% block body %}
<div class="page-container container-full flex gap direction-column align-center">
    <h1>Gestion des postes</h1>
    <div class="large-12-12 flex gap">
        <a class="button primary" href="{{ path('fonction_new') }}" title="Créer une nouvelle fonction">Nouvelle fonction</a>
    </div>
    <table class="large-6-12">
        <thead>
            <tr>
                <th></th>
                <th>Intitulé</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for fonction in fonctions %}
            <tr>
                <td>{{ fonction.id }}</td>
                <td>{{ fonction.intitule }}</td>
                <td>
                    <a href="{{ path('fonction_show', {'id': fonction.id}) }}"><img src="{{ asset('images/icons/info.png') }}" alt="Icone de visualisation"></a>
                    <a href="{{ path('fonction_edit', {'id': fonction.id}) }}"><img src="{{ asset('images/icons/edit.png') }}" alt="Icone de modification"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
