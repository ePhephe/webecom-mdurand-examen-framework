{% extends 'base.html.twig' %}

{% block title %}Wakdo - Bienvenue sur l'interface de gestion des restaurants{% endblock %}

{% block body %}
<div class="page-container container-full flex gap direction-column align-center">
    <h1>Fonction {{ fonction.intitule }}</h1>
    <div class="large-12-12 flex gap justify-between">
        <a class="button secondary" href="{{ path('fonction_index') }}" title="Retour à la liste">Retour à la liste</a>
        <div class="flex gap">
            <a class="button primary" href="{{ path('fonction_edit', {'id': fonction.id}) }}" title="Modifier la fonction">Modifier</a>
            {% if affectations|length == 0 %}
            {{ include('fonction/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
    <table class="large-3-12">
        <tbody>
            <tr>
                <th>Identidiant</th>
                <td>{{ fonction.id }}</td>
            </tr>
            <tr>
                <th>Intitulé</th>
                <td>{{ fonction.intitule }}</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
